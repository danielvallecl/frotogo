
  <div class="store_container">

  <div class="store_title">
    <h1 id="store_name"><%= @store.name.titleize %></h1>

    <div class="store_details">

    <img src="<%= @store.image_url %>" id="store_image">

    <p class="address"> <%= @store.location_address %></p>

    <p><a href="tel:<%= @store.display_phone %>" id="phone">
      <% if @store.display_phone != nil %>
      <%= @store.display_phone[3..-1] %>
      <% else %>
      <% end %>
    </a></p>

    <p class="rating">Yelp Rating: <span id="rating_number"> <%= @store.rating %> </span> </p>

    <%= @store.snippet_text %>

    <%= image_tag @store.rating_img_url, class: "rating_image" %>

    <!-- <a href="<%= @store.url %>" target="_blank"> <span class="reviews_yelp"> <%= @store.review_count %> reviews on Yelp</span> </a> -->

  </div>

</div>

  <div id="map_show" data-name = "<%= @store.name %>" data-latitude= "<%= @store.latitude %>" data-longitude= "<%= @store.longitude %>" data-location= "<%= @store.location_address %>" >
  </div>

  </div>
